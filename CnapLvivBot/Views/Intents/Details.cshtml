@model CnapLvivBot.Intent

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Content</h2>
<div>
  <hr />
  @Html.ActionLink("Add new response", "Create",
    "Respons", new { id = Model.Id }, null)
  <dl class="dl-horizontal">

    <dt>
      Available responses:
    </dt>
    @foreach (var el in Model.Responses)
    {
        <dd>
          @el.Content | @Html.ActionLink("Edit", "Edit",
                        "Respons", new { id = el.Id }, null)
        </dd>
    }

  </dl>
</div>
<br /><br /><br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
